{% extends 'base.html.twig' %}

{% block title %}Manager index{% endblock %}

{% block body %}
    <h1>Manager index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Salary</th>
                <th>License_date</th>
                <th>Active</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for manager in managers %}
            <tr>
                <td>{{ manager.id }}</td>
                <td>{{ manager.name }}</td>
                <td>{{ manager.salary }}</td>
                <td>{{ manager.licenseDate ? manager.licenseDate|date('Y-m-d') : '' }}</td>
                <td>{{ manager.active }}</td>
                <td>{{ manager.createdAt ? manager.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ manager.updatedAt ? manager.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('manager_show', {'id': manager.id}) }}">show</a>
                    <a href="{{ path('manager_edit', {'id': manager.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('manager_new') }}">Create new</a>
{% endblock %}
